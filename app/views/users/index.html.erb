<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Address</th>
      <th>Skill</th>
      <th>Image</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.address %></td>
        <td><%= user.skill %></td>

        <td><%= user.image %></td>
        <td><%= user.longitude %></td>
        <td><%= user.latitude %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="container latest">
  <div class="row">
    <div class="col-xs-12 ">
      <h1>Users Profiles</h1>
    </div>
  <% @users.each do |user| %>
    <a href="<%= users_path %>"> <%# 3 ways product || product_path product.id %>
      <div class="col-xs-12 col-md-4 wrap-users wrap">
        <figure>
          <% if user.image.present? %>
              <img src="<%=user.image%>" class="img-profile img-rounded" />
              <%# To get the image I created a method in product.rb in the model so we can use everywhere in products view, contorller and model  %>
          <% else %>
          <img class="img-profile img-responsive" src="http://www.fillmurray.com/300/300" alt="" />
          <% end %>
        </figure>
        <div class="wrap-text">
          <h3><%= link_to user.name, user %></h3>
          <%= user.skill %><br>
        </div><!-- end text-container -->
      </div><!-- end wrap-products -->
    </a><!-- end link -->
      <% end %>
  </div><!-- end row -->
</div><!-- end container -->

