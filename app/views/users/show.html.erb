<div class="rating">
  <h3> Transaction record and Rating of <%= @user.name %> </h3>
  <% sum = 0 %>
  <% count = 0 %>
  <% total = 0 %>

  <% @transaction_record.each do |t| %>
      <% p = t.review.to_i %>
      <% sum += p %>
      <% count += 1 %>
  <% end %>
  <% total = sum / count %>
  <%= count  %>

  <% total.times do  %>
   <span class="glyphicon glyphicon-star"></span>
  <% end %>
</div>


<br>
  <table>
    <thead>
      <tr>
        <th>Provider</th>
        <th>Reciver</th>
        <th>Credit</th>
        <th>Review</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transaction_record.each do |transaction_record| %>
    <% if transaction_record.provider == @user ||  transaction_record.reciver == @user %>
      <tr>
        <td><%= transaction_record.provider.name %></td>
        <td><%= transaction_record.reciver.name %></td>
        <td><%= transaction_record.review %></td>
        <td><%= transaction_record.comments %></td>
      </tr>
    <% end %>
  <% end %>
    </tbody>
  </table>









