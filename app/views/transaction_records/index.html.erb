<p id="notice"><%= notice %></p>

<h1>Transaction Records</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Reciver</th>
      <th>Credit</th>
      <th>Review</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_records.each do |transaction_record| %>
      <tr>

        <td><%= transaction_record.provider.name %></td>
        <td><%= transaction_record.reciver.name %></td>
        <td><%= transaction_record.credit %></td>
        <td><%= transaction_record.review %></td>
        <td><%= transaction_record.comments %></td>
        <td><%= link_to 'Show', transaction_record %></td>
        <td><%= link_to 'Edit', edit_transaction_record_path(transaction_record) %></td>
        <td><%= link_to 'Destroy', transaction_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_record_path %>
